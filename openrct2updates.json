    {
        "UpdateStageName": "OpenRCT2 Download",
        "UpdateSourcePlatform": "Linux",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "-c \"cd openrct2/server && ReleaseVersion={{ReleaseVersion}} && [[ -z \\\"$ReleaseVersion\\\" ]] && { wget -qO OpenRCT2.AppImage $(wget -qO- https://api.github.com/repos/OpenRCT2/OpenRCT2/releases/latest | grep browser_download_url | cut -d\\\\\\\" -f4 | grep linux-x86_64.AppImage) && echo \\\"Latest OpenRCT2 downloaded\\\"; } || { wget -qO OpenRCT2.AppImage $(wget -qO- https://api.github.com/repos/OpenRCT2/OpenRCT2/releases/tags/v$ReleaseVersion | grep browser_download_url | cut -d\\\\\\\" -f4 | grep linux-x86_64.AppImage) && echo \\\"OpenRCT2 v$ReleaseVersion downloaded\\\"; }\"",
        "SkipOnFailure": false
    },
    {
        "UpdateStageName": "OpenRCT2 Download",
        "UpdateSourcePlatform": "Windows",
        "UpdateSource": "Executable",
        "UpdateSourceData": "powershell.exe",
        "UpdateSourceArgs": "-NoProfile -Command \"$ProgressPreference='SilentlyContinue'; $ReleaseVersion='{{ReleaseVersion}}'; if ([string]::IsNullOrWhiteSpace($ReleaseVersion)) { Invoke-WebRequest -UseBasicParsing -Uri ((Invoke-RestMethod -UseBasicParsing -Uri 'https://api.github.com/repos/OpenRCT2/OpenRCT2/releases/latest').assets | Where-Object { $_.browser_download_url -like '*windows-portable-x64.zip' }).browser_download_url -OutFile 'OpenRCT2.zip'; if ($?) { Write-Output \\\"Latest OpenRCT2 downloaded\\\" } } else { Invoke-WebRequest -UseBasicParsing -Uri ((Invoke-RestMethod -UseBasicParsing -Uri \"https://api.github.com/repos/OpenRCT2/OpenRCT2/releases/tags/v$ReleaseVersion\").assets | Where-Object { $_.browser_download_url -like '*windows-portable-x64.zip' }).browser_download_url -OutFile 'OpenRCT2.zip'; if ($?) { Write-Output \\\"OpenRCT2 v$ReleaseVersion downloaded\\\" } }\"",
        "SkipOnFailure": false
    },
    {
        "UpdateStageName": "OpenRCT2 Extract",
        "UpdateSourcePlatform": "Linux",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "-c \"cd ./openrct2/server && chmod +x OpenRCT2.AppImage && ./OpenRCT2.AppImage --appimage-extract >/dev/null && rm -f OpenRCT2.AppImage\"",
        "SkipOnFailure": false
    },
    {
        "UpdateStageName": "OpenRCT2 Extract",
        "UpdateSourcePlatform": "Windows",
