[
    {
        "UpdateStageName": "AppImage Directory Creation",
        "UpdateSourcePlatform": "All",
        "UpdateSource": "CreateDirectory",
        "UpdateSourceArgs": "{{$FullRootDir}}.appimage"
    },
    {
        "UpdateStageName": "Data Directory Creation",
        "UpdateSourcePlatform": "All",
        "UpdateSource": "CreateDirectory",
        "UpdateSourceArgs": "{{$FullBaseDir}}data"
    },
    {
        "UpdateStageName": "Redis Download",
        "UpdateSourcePlatform": "All",
        "UpdateSource": "FetchURL",
        "UpdateSourceData": "https://packages.redis.io/redis-stack/redis-stack-server-7.4.0-v0-x86_64.AppImage",
        "UpdateSourceArgs": "Redis.AppImage",
        "UpdateSourceTarget": "{{$FullRootDir}}.appimage",
        "OverwriteExistingFiles": true,
        "SkipOnFailure": false
    },
    {
        "UpdateStageName": "Redis Extract",
        "UpdateSourcePlatform": "All",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "-c \"cd ./redis/.appimage && chmod +x Redis.AppImage && ./Redis.AppImage --appimage-extract >/dev/null 2>&1 && rm -f Redis.AppImage\"",
        "SkipOnFailure": false
    },
    {
        "UpdateStageName": "AppImage Directory Symlink Creation",
        "UpdateSourcePlatform": "All",
        "UpdateSource": "Executable",
        "UpdateSourceData": "/bin/bash",
        "UpdateSourceArgs": "-c \"cd ./redis && rm -f server; ln -s .appimage/squashfs-root/usr server\"",
        "SkipOnFailure": false
    },
    {
        "UpdateStageName": "Redis.conf Download",
        "UpdateSourcePlatform": "All",
        "UpdateSource": "FetchURL",
        "UpdateSourceData": "https://raw.githubusercontent.com/redis/redis/unstable/redis.conf",
        "UpdateSourceTarget": "{{$FullBaseDir}}",
        "OverwriteExistingFiles": false,
        "SkipOnFailure": false
    }
]