        "UpdateSourceArgs": "OpenStarbound/OpenStarbound",
        "UpdateSourceData": "OpenStarbound-Windows-Server.zip",
        "UpdateSourceTarget": "{{$FullBaseDir}}",
        "UnzipUpdateSource": true,
        "OverwriteExistingFiles": true,
