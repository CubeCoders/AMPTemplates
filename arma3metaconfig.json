[
    {
        "ConfigFile": "server.cfg",
        "AutoMap": true,
        "ConfigType": "template",
        "ConfigFileTemplate": "arma3configtemplate.cfg"
    },
    {
        "ConfigFile": "battleye/beserver.cfg",
        "ConfigType": "kvp",
        "ConfigFormat": "{0} {1}",
        "Subsections": [
            {
                "Heading": "$root",
                "SettingMappings": {
                    "RConPassword" : "$RemoteAdminPassword",
                    "RConPort" : "$RemoteAdminPort",
                    "RConIP" : "RemoteAdminIP"
                }
            }
        ]
    },
    {
        "ConfigFile": "battleye/beserver_x64.cfg",
        "ConfigType": "kvp",
        "ConfigFormat": "{0} {1}",
        "Subsections": [
            {
                "Heading": "$root",
                "SettingMappings": {
                    "RConPassword" : "$RemoteAdminPassword",
                    "RConPort" : "$RemoteAdminPort",
                    "RConIP" : "RemoteAdminIP"
               }
            }
        ]
    }
]
